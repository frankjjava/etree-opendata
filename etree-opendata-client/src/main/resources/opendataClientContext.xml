<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
	
	<import resource="file:${vdc.properties.dir}/commonsConfig.xml"/>
	<!-- <import resource="classpath*:opendataCoreContext.xml"/>  -->
	
	<bean id="openDataServiceClient" class="com.verteil.opendata.client.impl.OpenDataServiceClientImpl">
		<property name="configParams">
			<map>
				<entry key="opendata.jsonrequest.get.url" value="http://${opendata.host}:${port}/opendata/rest/"/>
				<entry key="doRemoteCall" value="true" />
			</map>
		</property>
<!-- 	<property name="openDataService" ref="openDataService"> -->
	</bean>

	<bean id="openDataServiceClientHelper" class="com.verteil.opendata.client.helper.OpenDataServiceClientHelper" >
		<property name="openDataServiceClient" ref="openDataServiceClient" />
	</bean>

</beans>